.Cards
	margin 0 auto
	lost-utility clearfix;
	max-width $max-width

.Card
	position relative
	lost-waffle 1/4 4 gutter
	background white
	text-decoration none
	color $body-color
	box-shadow 1px 1px 2px $blue
	&:hover, &:focus
		color $body-color
	+medium()
		lost-waffle 1/3 3 0px
	+small()
		lost-waffle 1/2 2 0px
	&__overlay
		opacity 0
		position absolute
		background $blue-dark2
		top 0
		left 0
		right 0
		bottom 0
		transition opacity 0.3s
		&:hover
			opacity 0.3
			transition opacity 0.3s
	&__image
		line-height 1
		border-bottom 3px solid $red
		img
			vertical-align top
			width 100%
	&__text
		padding gutter
		h1,h2,h3,h4,h5,h6
			&:first-of-type
				font-size 1.2em
				padding-top 0
				margin-top 0